{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2024",
    "outDir": "out",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "jest.config.ts",
    "src/jest-tests",
    "examples"
  ]
}
